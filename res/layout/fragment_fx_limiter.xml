<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@id/id_tv_output_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/pref_output_pan" />

            <CheckBox
                android:id="@id/id_output_pan_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_tv_output_pan"
                android:layout_alignBottom="@id/id_tv_output_pan"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/id_tv_output_pan"
                android:button="@null"
                android:checked="true" />

            <EditText
                android:id="@id/id_tv_output_pan_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_tv_output_pan"
                android:layout_alignParentEnd="true"
                android:focusable="false"
                android:inputType="textNoSuggestions" />

            <SeekBar
                android:id="@id/id_sb_output_pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:focusable="true"
                android:max="200"
                android:progress="100" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blacktransparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@id/id_tv_output_gain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/pref_output_gain" />

            <CheckBox
                android:id="@id/id_output_gain_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_tv_output_gain"
                android:layout_alignBottom="@id/id_tv_output_gain"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/id_tv_output_gain"
                android:button="@null"
                android:checked="true" />

            <EditText
                android:id="@id/id_tv_output_gain_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_tv_output_gain"
                android:layout_alignParentEnd="true"
                android:focusable="false"
                android:inputType="textNoSuggestions" />

            <SeekBar
                android:id="@id/id_sb_output_gain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:focusable="true"
                android:max="210"
                android:progress="100" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blacktransparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@id/id_tv_limiter_threshold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/pref_fx_limiter_threshold" />

            <CheckBox
                android:id="@id/id_limiter_threshold_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_tv_limiter_threshold"
                android:layout_alignBottom="@id/id_tv_limiter_threshold"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/id_tv_limiter_threshold"
                android:button="@null"
                android:checked="true" />

            <EditText
                android:id="@id/id_tv_limiter_threshold_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/id_tv_limiter_threshold"
                android:layout_alignParentEnd="true"
                android:focusable="false"
                android:inputType="textNoSuggestions" />

            <SeekBar
                android:id="@id/id_sb_limiter_threshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:focusable="true"
                android:max="50" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blacktransparent" />
    </LinearLayout>
</ScrollView>